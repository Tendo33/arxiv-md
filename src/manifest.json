{
  "manifest_version": 3,
  "name": "arXiv to Markdown",
  "version": "1.0.1",
  "description": "Save arXiv papers as Markdown",
  "author": "SimonSun",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": ["storage", "downloads", "activeTab", "notifications"],
  "host_permissions": [
    "https://arxiv.org/*",
    "https://ar5iv.org/*",
    "https://ar5iv.labs.arxiv.org/*",
    "https://export.arxiv.org/*",
    "https://mineru.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://arxiv.org/abs/*", "https://arxiv.org/pdf/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    },
    "default_title": "arXiv to Markdown"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://arxiv.org/*"]
    }
  ]
}
